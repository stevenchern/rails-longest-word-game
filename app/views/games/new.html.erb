<h1>New game</h1>
<ul>
  <% @letters.each do |letter| %>
    <li class="btn btn-primary"><%= letter %></li>
  <% end %>
</ul>

  <h3>What is the longest word you can find?</h3>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type the word here">
  <input type="submit" value="Play">
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input type="hidden" name="time" value=" <%= @start_time %> ">
</form>
